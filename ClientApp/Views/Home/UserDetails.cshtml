        </div>
        <div class="form-group">
            <div class="col-md-8">
            @Html.LabelFor(model => model.Address, htmlAttributes: new {@class = "control-label col-md-2"})

            @Html.EditorFor(model => model.Address, new {htmlAttributes = new {@class = "form-control col-md-6 disabled" } })

        </div>
        </div>
        <div class="form-group">
            <div class="col-md-8">
                @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })

                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control col-md-6 disabled" } })

            </div>
        </div>
