@model ClientApp.Models.ClientModel
@{
    ViewBag.Title = "UserDetails";
}

<h2>UserDetails</h2>


@using (Html.BeginForm("UserDetails", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      
        <div class="form-group">
            <div class="col-md-8">
            <img src="@Url.Action("GetImg", new {path = Model.Image})" height="100" class="col-md-2"/>
